# ~/.bash_functions: sourced from ~/.bashrc

# check for old-style profile inclusion files, warn and load anyway
for INC in $(find "$HOME" -maxdepth 1 -name '.bash_functions_inc.*') ; do
    echo "$INC" >> "$HOME/.found_deprecated_incfiles"
    . "$INC"
done

# read function-files provided for inclusion
for INC in $(find "$HOME" -maxdepth 1 -name '.bash_functions_*.inc') ; do
    . "$INC"
done
